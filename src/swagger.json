{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Mangue Coworking - Endereço Fiscal Softex",
        "description": "Essa é uma API onde será possível gerenciar a retirada e recebimento de encomendas na SofTex Recife.",
        "termsOfService": "http://softex.com.br",
        "contact": {
            "email": "claudiomrcas@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/usuario": {
            "post": {
                "summary": "Cadastrar novo Usuário",
                "description": "Essa rota será responsável por cadastrar um novo usuário.",
                "tags": ["Usuario"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "example": {
                                "nomeUsuario": "Johny NEWWWW",
                                "funcaoUsuario": "DEV",
                                "emailUsuario": "john.doe@email.com",
                                "loginUsuario": "john",
                                "senhaUsuario": "pass"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "get": {
                "summary": "Listar Usuários",
                "description": "Essa rota será responsável por listar todos os usuários cadastrados.",
                "tags": ["Usuario"],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/usuario/email/{email}": {
            "get": {
                "summary": "Obter Usuário por Email",
                "description": "Essa rota será responsável por obter um usuário com base no email fornecido.",
                "tags": ["Usuario"],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Email do Usuário para busca",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não encontrado"
                    }
                }
            }
        },
        "/usuario/{id}": { 
            "delete": {
                "tags": ["Usuario"],
                "summary": "Deletar Usuário por ID",
                "description": "Esta rota é responsável por deletar um usuário com base no ID fornecido.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do Usuário para Apagar",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não encontrado"
                    }
                }
            }        
        }
    },
    "components": {
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {                    
                    "idUsuario": {
                        "type": "integer"
                    },
                    "statusUsuario": {
                        "type": "string"
                    },
                    "nomeUsuario": {
                        "type": "string"
                    },
                    "funcaoUsuario": {
                        "type": "string"
                    },
                    "emailUsuario": {
                        "type": "string"
                    },
                    "loginUsuario": {
                        "type": "string"
                    },
                    "senhaUsuario": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string"
                    },
                    "updatedAt": {
                        "type": "string"
                    }

                }
            }
        }
    }
}
