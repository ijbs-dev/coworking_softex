{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Mangue Coworking - Endereço Fiscal Softex",
        "description": "Essa é uma API onde será possível gerenciar a retirada e recebimento de encomendas na SofTex Recife.",
        "termsOfService": "http://softex.com.br",
        "contact": {
            "email": "claudiomrcas@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/usuario": {
            "post": {
                "summary": "Cadastrar novo Usuário",
                "description": "Essa rota será responsável por cadastrar um novo usuário.",
                "tags": ["Usuario"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Usuario"
                            },
                            "example": {
                                "nomeUsuario": "Conceição Evaristo",
                                "funcaoUsuario": "UX Writer",
                                "emailUsuario": "conceicao_evaristo@email.com",
                                "loginUsuario": "conceicao_evaristo",
                                "senhaUsuario": "password123"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "OK, Usuário Criado!"
                    },
                    "400": {
                        "description": "Erro ao criar usuário!"
                    }
                }
            },
            "get": {
                "summary": "Listar Usuários",
                "description": "Essa rota será responsável por listar todos os usuários cadastrados.",
                "tags": ["Usuario"],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "put": {
                "tags": ["Usuario"],
                "summary": "Atualiza dados do Usuário",
                "description": "Atualiza os dados de um Usuário",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nomeUsuario": {
                                        "type": "string"
                                    },
                                    "senhaUsuario": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "nomeUsuario": "Conceição Evaristo",
                                    "senhaUsuario": "password456"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Usuário Inexistente"
                    }
                }
            }
        },
        "/usuario/email/{email}": {
            "get": {
                "summary": "Obter Usuário por Email",
                "description": "Essa rota será responsável por obter um usuário com base no email fornecido.",
                "tags": ["Usuario"],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Email do Usuário para busca",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não encontrado"
                    }
                }
            },
            "delete": {
                "tags": ["Usuario"],
                "summary": "Deletar Usuário por Email",
                "description": "Esta rota é responsável por deletar um usuário com base no email fornecido.",
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Email do Usuário para deleção",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "nomeUsuario": {
                        "type": "string"
                    },
                    "funcaoUsuario": {
                        "type": "string"
                    },
                    "emailUsuario": {
                        "type": "string"
                    },
                    "loginUsuario": {
                        "type": "string"
                    },
                    "senhaUsuario": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
